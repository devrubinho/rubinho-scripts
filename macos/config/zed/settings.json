{
  // ────────────────────────────────
  // Theme & UI
  // ────────────────────────────────
  "icon_theme": "Symbols Icon Theme",
  "theme": "Catppuccin Mocha",
  "ui_font_size": 16,
  "ui_font_family": ".ZedSans",

  // ────────────────────────────────
  // Buffer (Editor) Settings
  // ────────────────────────────────
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 14,
  "buffer_font_weight": 400,
  "buffer_line_height": {
    "custom": 1.6
  },

  // ────────────────────────────────
  // Tabs & Indentation
  // ────────────────────────────────
  "tab_size": 2,
  "hard_tabs": false,
  "auto_indent": true,

  // ────────────────────────────────
  // Cursor
  // ────────────────────────────────
  "cursor_blink": true,
  "cursor_shape": "bar",

  // ────────────────────────────────
  // Text Display
  // ────────────────────────────────
  "soft_wrap": "editor_width",
  "show_whitespaces": "boundary",
  "current_line_highlight": "all",

  // ────────────────────────────────
  // Formatting & Saving
  // ────────────────────────────────
  "format_on_save": "on",
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "autosave": "off",

  // ────────────────────────────────
  // Completions
  // ────────────────────────────────
  "show_completions_on_input": true,
  "show_completion_documentation": true,
  "linked_edits": true,

  // ────────────────────────────────
  // Git
  // ────────────────────────────────
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },

  // ────────────────────────────────
  // Terminal
  // ────────────────────────────────
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font",
    "font_size": 14,
    "line_height": "standard",
    "dock": "right",
    "shell": {
      "program": "/bin/zsh"
    },
    "blinking": "terminal_controlled",
    "copy_on_select": false
  },

  // ────────────────────────────────
  // Search
  // ────────────────────────────────
  "use_smartcase_search": true,

  // ────────────────────────────────
  // File Scanning
  // ────────────────────────────────
  "file_scan_exclusions": [
    "**/node_modules/**",
    "**/.git/**",
    "**/.next/**",
    "**/dist/**",
    "**/build/**",
    "**/.turbo/**"
  ],

  // ────────────────────────────────
  // LSP (Language Servers)
  // ────────────────────────────────
  "lsp": {
    "eslint": {
      "binary": {
        "path": "eslint",
        "arguments": [
          "--stdio"
        ]
      }
    },
    "typescript-language-server": {
      "binary": {
        "path": "typescript-language-server",
        "arguments": [
          "--stdio"
        ]
      }
    },
    "tailwindcss-language-server": {
      "binary": {
        "path": "tailwindcss-language-server",
        "arguments": [
          "--stdio"
        ]
      }
    },
    "gopls": {
      "binary": {
        "path": "gopls"
      }
    },
    "terraform-ls": {
      "binary": {
        "path": "terraform-ls",
        "arguments": [
          "serve"
        ]
      }
    },
    "ruby-lsp": {
      "binary": {
        "path": "ruby-lsp"
      }
    }
  },

  // ────────────────────────────────
  // Language-Specific Settings
  // ────────────────────────────────
  "languages": {
    "JavaScript": {
      "tab_size": 2,
      "format_on_save": "on"
    },
    "TypeScript": {
      "tab_size": 2,
      "format_on_save": "on"
    },
    "TSX": {
      "tab_size": 2,
      "format_on_save": "on"
    },
    "Go": {
      "tab_size": 4,
      "hard_tabs": true,
      "format_on_save": "on"
    }
  }
}